<li id="checklist_item_<%= checklist_item.id %>" <%= "class=\"is-done-checklist-item\"" if checklist_item.is_done %> >
  <%= check_box_tag 'checklist_item', "1", checklist_item.is_done, 
      :disabled => !checklist_item.editable_by?(User.current),
      :onclick => "if (this.checked == true) { Element.up(this, \"li\").addClassName(\"is-done-checklist-item\");} else {Element.up(this, \"li\").removeClassName(\"is-done-checklist-item\");}; " + remote_function(:url => {:controller => "issue_checklists", :action => "done", :checklist_item_id => checklist_item.id, :is_done => (checklist_item.is_done == false).to_s}, :with => "checklist_item_#{checklist_item.id}") %>
  <%= label_tag 'checklist_item', h(checklist_item.subject) %>
  <%= link_to_remote(image_tag('delete.png'), 
			:url => {:controller => "issue_checklists", :action => 'delete', :checklist_item_id => checklist_item}, 
			:method => :delete, 
			:confirm => l(:text_are_you_sure),	
			:html => {:class  => "delete", :title => l(:button_delete) }) if checklist_item.editable_by?(User.current) %>
</li>
